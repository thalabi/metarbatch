<?xml version="1.1" encoding="UTF-8"?>
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
						http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
						http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">

	<changeSet author="Tarif Halabi" id="remote-api-call">
        <createTable tableName="remote_api_call">
        
            <column autoIncrement="true" name="id" type="BIGINT">
				<constraints nullable="false" primaryKey="true"
					primaryKeyName="remote_api_call_pkey" />
            </column>
            <column name="lk" type="VARCHAR(4000)">
				<constraints nullable="false" />
            </column>
            
            <column name="request" type="VARCHAR(128)">
				<constraints nullable="false" />
            </column>
            <column name="parameters" type="VARCHAR(65535)"/>
            <column name="timestamp" type="TIMESTAMP WITH TIME ZONE">
				<constraints nullable="false" />
            </column>

            
            <column name="version" type="BIGINT">
				<constraints nullable="false" />
            </column>
        </createTable>
		<addUniqueConstraint columnNames="lk" constraintName="remote_api_call_lk_key"
			tableName="remote_api_call" />
        
	</changeSet>
</databaseChangeLog>
